<!Doctype html>
<html>
  <head>
   <title>Articles Index Page</title>
  </head>
  <body>
    <%= render 'layouts/message' %>
    <h1>
      Articles
    </h1>
    <div style="text-align: right">
      <%= link_to 'New Article', new_article_path %>
    </div>
    <table border="true">
      <tr>
        <th>
          Title
        </th>
        <th width="60%">
          Description
        </th>
        <th>
          Actions
        </th>
      </tr>
      <% @all_articles.each do |article| %>
        <tr>
          <td>
            <%= article.title %>
          </td>
          <td>
            <%= article.description %>
          </td>
          <td>
            <%= link_to 'Show', article_path(article.id) %>
            <%= link_to 'Edit', edit_article_path(article.id) %>
            <%= link_to 'Delete', article_path(article.id), method: :delete, data: {confirm: "Are you sure?"} %>
          </td>
        </tr>
      <% end %>
    </table>
  </body>
</html>