<!Doctype html>
<html>
  <head>
    <title>Edit Article</title>
  </head>
  <body>
    <header style="background-color: black; color: white;">
      <table style="margin-top: 0">
        <tr>
          <td style="font-size: 60px; text-align: left;" width="90%">
            Chirag's Alpha Blog
          </td>
          <td style="font-size: 15px; text-align: right; padding-right: 30px>
            <%= link_to 'About', about_path, {style: 'color:white'} %>
          </td >
          <td style="font-size: 15px; text-align: right; padding-right: 30px">
            <%= link_to 'Article', articles_path, {style: 'color:white'} %>
          </td> 
          <td style="font-size: 15px; text-align: right; padding-right: 30px">
            <%= link_to 'Home', root_path, {style: 'color:white'} %>
          </td>
        </tr>
      </table>
    </header>
    <% if @article.errors.any? %>
      <ul style="color: red">
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_for @article do |f| %>
      <%= f.label :title %><br/>
      <%= f.text_field :title %><br/><br/> 
      <%= f.label :description %><br/>
      <%= f.text_area :description %><br/><br/>
      <%= f.submit "Update Article" %>
    <% end %>
    <footer style="background-color: black; padding: 30px"></footer>
  </body>
</html>
